<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @idea.name %>
</p>

<p>
  <b>Description:</b>
  <%= @idea.description %>
</p>

<p>
  <b>Picture:</b>

<% if @idea.picture.present? %>
  <%= image_tag(@idea.picture_url,  :width => 600) %>
<!--
  <img src="<%=@idea.picture_url%>" width="500" height="333" alt="Gee this makes me thirsty"/>
-->
<% else %>
Image not found
<% end %>


<h3>Comments</h3>
<% @idea.comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br />
    <p><%= comment.body %><p>
  </div>
<% end %>
<%= render 'comments/form' %>

</p>


